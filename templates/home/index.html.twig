    {# Sección Especies #}
    <section id="especies" class="container py-5">
        <div class="row mb-5">
            <div class="col-12 text-center">
                <h2 class="display-5 fw-bold" style="color: #1a2f23;">Especies en Conservación</h2>
                <div class="mx-auto" style="width: 80px; height: 5px; background-color: #ffc107; border-radius: 5px;"></div>
            </div>
        </div>

        <div class="row g-4">
            {% set residentes = [
                {'nombre': 'Lince Ibérico', 'info': 'Especie clave de nuestra provincia de Jaén.', 'img': 'https://images.unsplash.com/photo-1591824438708-ce405f39ba3d?w=500'},
