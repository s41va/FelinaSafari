            ] %}

            {% for felino in residentes %}
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 border-0 shadow-sm overflow-hidden" style="border-radius: 15px;">
                        <img src="{{ felino.img }}" class="card-img-top" alt="{{ felino.nombre }}" style="height: 280px; object-fit: cover;">
                        <div class="card-body p-4 text-center">
                            <h4 class="card-title fw-bold">{{ felino.nombre }}</h4>
                            <p class="card-text text-muted">{{ felino.info }}</p>
                            <a href="#" class="btn btn-outline-dark rounded-pill px-4 mt-2">Conocer más</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>

