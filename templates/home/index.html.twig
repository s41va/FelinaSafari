{% extends 'base.html.twig' %}

{% block title %}Home Felina{% endblock %}

{% block body %}


<style>

</style>
<div class="example-wrapper">

    <body>

    {# Hero Section #}
    <header class="py-5 text-white" style="background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('https://images.unsplash.com/photo-1517446376251-536967676e82?auto=format&fit=crop&w=1600'); background-size: cover; background-position: center; min-height: 500px; display: flex; align-items: center;">
        <div class="container text-center">
            <h1 class="display-2 fw-bold mb-3">El Corazón de Sierra Morena</h1>
            <p class="lead fs-3 mb-5">Santuario y recuperación del Lince Ibérico y grandes felinos del mundo.</p>
            <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
                <a href="#especies" class="btn btn-success btn-lg px-5 py-3 fw-bold shadow">Ver los Felinos</a>
                <a href="#planea" class="btn btn-outline-light btn-lg px-5 py-3 fw-bold">Cómo llegar</a>
            </div>
        </div>
    </header>

    {# Sección Especies #}
    <section id="especies" class="container py-5">
        <div class="row mb-5">
            <div class="col-12 text-center">
                <h2 class="display-5 fw-bold" style="color: #1a2f23;">Especies en Conservación</h2>
                <div class="mx-auto" style="width: 80px; height: 5px; background-color: #ffc107; border-radius: 5px;"></div>
            </div>
        </div>

        <div class="row g-4">
            {% set residentes = [
                {'nombre': 'Lince Ibérico', 'info': 'Especie clave de nuestra provincia de Jaén.', 'img': 'img/lince.webp'},
                {'nombre': 'Tigre de Bengala', 'info': 'Animales rescatados de entornos urbanos.', 'img': 'img/tigreBengala.jpg'},
                {'nombre': 'León de Atlas', 'info': 'Majestuosidad y fuerza en semilibertad.', 'img': 'img/leonAtlas.jpg'}
            ] %}

            {% for felino in residentes %}
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 border-0 shadow-sm overflow-hidden" style="border-radius: 15px;">
                        <img src="{{ felino.img }}" class="card-img-top" alt="{{ felino.nombre }}" style="height: 280px; object-fit: cover;">
                        <div class="card-body p-4 text-center">
                            <h4 class="card-title fw-bold">{{ felino.nombre }}</h4>
                            <p class="card-text text-muted">{{ felino.info }}</p>
                            <a href="{{ path('app_felinos') }}" class="btn btn-outline-dark rounded-pill px-4 mt-2">Conocer más</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>

    {# Info Práctica / Call to Action #}
    <section class="bg-light py-5 border-top border-bottom">
        <div class="container">
            <div class="row align-items-center">
                <div id="planea" class="col-md-7">
                    <h3 class="fw-bold mb-3" style="color: #1a2f23;">Planea tu visita a Jaén</h3>
                    <p class="text-secondary fs-5">Accede a nuestros <a href="{{ path('app_horarios') }}">horarios</a>. Contamos con guías expertos en fauna ibérica y africana.</p>
                </div>
                <div class="col-md-5 text-md-end">
                    <div class="p-4 bg-white shadow-sm rounded-3">
                        <p class="mb-2 fw-bold text-dark"><i class="bi bi-geo-alt-fill text-danger me-2"></i>A-4, Despeñaperros, Jaén</p>
                        <p class="mb-0 text-muted small">Aparcamiento gratuito para visitantes.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# Footer #}
    {#<footer class="text-light py-4" style="background-color: #1a2f23;">
        <div class="container text-center">
            <p class="mb-1"><strong>Reserva de felinos Jaén</strong> - El paraíso de los grandes gatos.</p>
            <p class="small text-white-50">© {{ "now"|date("Y") }} Todos los derechos reservados.</p>
        </div>
    </footer>#}
    </body>


</div>
{% endblock %}

