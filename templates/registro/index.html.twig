{% extends 'base.html.twig' %}

{% block title %}Registro - Reserva Felina Jaén{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-header text-white text-center py-4" style="background-color: #1a2f23;">
                        <i class="bi bi-person-plus-fill display-4"></i>
                        <h2 class="fw-bold mt-2">Crear Cuenta</h2>
                        <p class="mb-0 opacity-75">Únete a la Reserva Felina</p>
                    </div>

                    <div class="card-body p-4 p-md-5">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                        <div class="mb-3">
                            {{ form_label(form.username, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.username, {'attr': {'class': 'form-control shadow-sm'}}) }}
                            {{ form_errors(form.username) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.email, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control shadow-sm'}}) }}
                            {{ form_errors(form.email) }}
                        </div>

                        {# El campo password es un RepeatedType, accedemos a sus hijos #}
                        <div class="mb-3">
                            {{ form_label(form.password.first, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.password.first, {'attr': {'class': 'form-control shadow-sm'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.password.second, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.password.second, {'attr': {'class': 'form-control shadow-sm'}}) }}
                            {{ form_errors(form.password.first) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.telefono, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.telefono, {'attr': {'class': 'form-control shadow-sm'}}) }}
                            {{ form_errors(form.telefono) }}
                        </div>

                        {# Ocultamos o mostramos la fecha de creación (normalmente se hace automática en el controlador) #}
                        <div class="mb-4">
                            {{ form_label(form.fechaCreacion, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            <div class="d-flex gap-2">
                                {{ form_widget(form.fechaCreacion, {'attr': {'class': 'form-select shadow-sm'}}) }}
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            {# Sobrescribimos el botón del FormType para que sea verde/amarillo #}
                            <button type="submit" class="btn btn-warning fw-bold py-2 shadow-sm">
                                <i class="bi bi-check-circle-fill me-2"></i>Registrar Usuario
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>

                    <div class="card-footer bg-light text-center py-3">
                        <small class="text-muted">¿Ya tienes cuenta? <a href="{{ path('app_home') }}" class="text-success fw-bold">Inicia sesión aquí</a></small>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
