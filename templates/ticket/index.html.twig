{# templates/ticket/confirmation.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Ticket Confirmation{% endblock %}

{% block body %}
    <div class="container mt-5" style="max-width: 600px;">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-success text-white text-center py-4">
                <h2 class="mb-0">ðŸŒ¿ Purchase Successful!</h2>
                <p class="mb-0 opacity-75">Your entry to the Natural Reserve is confirmed.</p>
            </div>

            <div class="card-body p-4">
                <div class="text-center mb-4">
                    <p class="text-muted small mb-1">TICKET ID</p>
                    <h4 class="fw-bold">#{{ entrada.entradaId }}</h4>
                </div>

                <hr>

                <div class="row mb-3">
                    <div class="col-6">
                        <span class="text-muted d-block small">Visitor</span>
                        <strong>{{ app.user.userIdentifier }}</strong>
                    </div>
                    <div class="col-6 text-end">
                        <span class="text-muted d-block small">Ticket Type</span>
                        <strong>{{ entrada.tipoEntrada.nombre }}</strong> {# Assumes 'nombre' exists in TipoEntrada #}
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-6">
                        <span class="text-muted d-block small">Purchase Date</span>
                        <span>{{ entrada.fechaCompra|date('d/m/Y H:i') }}</span>
                    </div>
                    <div class="col-6 text-end">
                        <span class="text-muted d-block small">Visit Date</span>
                        <span class="badge bg-primary fs-6">{{ entrada.fechaVisita|date('d/m/Y') }}</span>
                    </div>
                </div>

                <hr>

                <div class="alert alert-info small mt-3">
                    <strong>Note:</strong> Please present this digital receipt or a printed version at the South Gate entrance.
                </div>
            </div>

            <div class="card-footer bg-light p-3 text-center">
                <a href="{{ path('app_home') }}" class="btn btn-outline-secondary btn-sm">Return to Home</a>
                <button onclick="window.print()" class="btn btn-primary btn-sm ms-2">Print Ticket</button>
            </div>
        </div>
    </div>
{% endblock %}
